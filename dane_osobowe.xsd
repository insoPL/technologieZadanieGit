        <xs:element name="imie" type="xs:string"/>

        <xs:element name="nazwisko" type="xs:string"/>

        <xs:element name="plec">
          <xs:simpleType>
            <xs:restriction base="xs:string">
              <xs:enumeration value="m"/>
              <xs:enumeration value="k"/>
